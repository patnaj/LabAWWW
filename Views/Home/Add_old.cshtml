@model ProductModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="validation" asp-validation-summary="All"></div>
<form method="post">
  <input type="hidden" name="Id" value=@Model.Id >
  <input type="hidden" name="CatlogId" value=@Model.CatlogId >
  <div class="form-group">
    <label>Tile</label>
    <input class="form-control" name="Title" value="@Model.Title">
  </div>
  <div class="form-group">
    <label>Opis</label>
    <input class="form-control" value="@Model.Description" name="Description">
  </div>
  <div class="form-group">
    <label>Cena</label>
    <input class="form-control" value="@Model.Price" name="Price">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
